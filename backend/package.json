{
  "name": "pizza-delivery-backend",
  "version": "1.0.0",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "clean": "rimraf dist",
    "build": "tsc",
    "postinstall": "npm run build",
    "migrate": "node-pg-migrate",
    "migrate:up": "node-pg-migrate up --no-check-order",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^18.19.74",
    "@types/pg": "^8.10.9",
    "@types/socket.io": "^3.0.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
